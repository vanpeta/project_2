<div class= 'panels'>
  <div class='profile col-md-5'>
    <div class= 'profile-params'>
    <%= image_tag @user.avatar.url(:thumb) %><br>
    <strong> Name: </strong><br>
    <%= @user.name %> <br>
    <strong> Contact <%= @user.name %> </strong><br>
    <%= @user.email %> <br>
    </div>
  </div>

  <div class= 'profile-activities col-md-5'>
    <h3> <%= @user.name %>'s Activities </h3>
    <ul class='activities-profile' style='list-style: none'>
      <% @activities.each do |activity| %>
      <li><%= link_to activity.name, activity_path(activity) %></li>
       <% end %>
   </ul>
  </div>
</div>


