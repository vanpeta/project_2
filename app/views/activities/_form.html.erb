    <div class= "new-activity-form">
        <h1>Create your own activity!</h1>
        <%= form_for @activity do |f| %>
        <div>
            <div class="new-activity-params">
                <%= f.label :name %><br>
                <%= f.text_field :name %><br>
                <%= f.label :description %><br>
                <%= f.text_field :description %><br>
                <%= f.label :location %><br>
                <%= f.text_field :location %><br>
                <%= f.label :date %><br>
                <%= f.date_select :date %><br>
                <%= f.label :time %><br>
                <%= f.time_select :time %><br>
                <%= f.label :duration %><br>
                <%= f.number_field :duration %><br>
            </div>
            <div class='new-activity-buttons'>
                <%= f.submit "Add", :class => 'btn btn-md btn-primary back' %>
                <% end %>
                <%= link_to "My Activities", my_activities_path, :class => 'btn btn-md btn-primary back'%>
            </div>
        </div>
    </div>
